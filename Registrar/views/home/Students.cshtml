@{
  Layout = "_Layout";
}
<div class="container">
  @if (Model.Count != 0)
  {
    <ul class="list-unstyled">
     @foreach (var student in Model)
     {
       <li><a href="/students/@student.GetId()"><button type="button" class="btn btn-default btn-wide">@student.GetName()</button></a></li>
     }
   </ul>
  }
  else
  {
   <h3>There are no students entered yet.</h3>
  }
</div>
<a href="/students/new"><button type="submit" class="btn btn-default btn-wide">Add Student</button></a>
<a href="/"><button type="button" class="btn btn-default btn-wide">Return Home</button></a>
